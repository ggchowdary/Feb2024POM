<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart App Test Regression Suite" verbose="4" parallel="tests" thread-count="4">

<listeners>
		<listener
			class-name="com.qa.opencart.Listeners.ExtentReportListener" />
			<listener
			class-name="com.qa.opencart.Listeners.TestAllureListener" />
			<!--<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />-->

	</listeners>
	
	
	<test name="Login Page Test">
		<parameter name="browser" value="chrome"></parameter>
				<classes>
			<class name="com.qa.opencart.Tests.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Account Page Test">
						<parameter name="browser" value="chrome"></parameter>

				<classes>
			<class name="com.qa.opencart.Tests.AccountsPageTest" />
		</classes>
	</test>
	
	<test name="Product Info Page Test">
						<parameter name="browser" value="chrome"></parameter>

				<classes>
			<class name="com.qa.opencart.Tests.ProductInfoPageTest" />
		</classes>
	</test>

<test name="Registration Page Test">
						<parameter name="browser" value="chrome"></parameter>

				<classes>
			<class name="com.qa.opencart.Tests.RegistrationPageTest" />
		</classes>
	</test>

</suite>